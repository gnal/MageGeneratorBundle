<?xml version="1.0"?>
<layout>
    <!-- Here, we reference the XML node path of our route -->
    <adminhtml_{{ entity|lower }}_index>
        <reference name="content">
            <!-- We also reference our block by namespacename_modulename/adminhtml_controllername, and name it uniquely -->
            <block type="{{ namespace|lower }}_{{ module|lower }}/adminhtml_{{ entity|lower }}" name="{{ namespace|lower }}_{{ module|lower }}_{{ entity|lower }}" />
        </reference>
    </adminhtml_{{ entity|lower }}_index>
</layout>
